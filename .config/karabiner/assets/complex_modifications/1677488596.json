{
  "title": "FN + Arrow Keys",
  "rules": [
    {
      "description": "FN + Up to command + option + Up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ]
        }
      ]
